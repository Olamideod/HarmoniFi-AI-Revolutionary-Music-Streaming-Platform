{
  "version": 2,
  "builds": [
    {
      "src": "recommendation_backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/next.config.js",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --legacy-peer-deps"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/recommendation_backend/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
